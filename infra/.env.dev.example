ENVIRONMENT=dev
APP_NAME=peerpush-api
APP_VERSION=0.1.0
GIT_SHA=dev
API_PORT=8000

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=peerpush_dev
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/peerpush_dev

REDIS_URL=redis://redis:6379/0

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_UPLOADS=peerpush-uploads-dev

# Media exposure flags
# In dev, serve bytes via API route (hides storage key and bucket details)
SERVE_MEDIA_VIA_API=1
# If you'd rather give clients a short-lived direct URL to S3/MinIO (still hides credentials),
# set this to 1. (Note: the object name appears in the URL but it expires quickly.)
S3_PRESIGN_DOWNLOADS=0
S3_PRESIGN_EXPIRY_SECONDS=300
