ENVIRONMENT=dev
APP_NAME=peerpush-api
APP_VERSION=0.1.0
GIT_SHA=dev
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=*

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=peerpush_dev
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/peerpush_dev

REDIS_URL=redis://redis:6379/0

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_UPLOADS=peerpush-uploads-dev

# Media exposure flags
# In dev, serve bytes via API route (hides storage key and bucket details)
SERVE_MEDIA_VIA_API=1
# If you'd rather give clients a short-lived direct URL to S3/MinIO (still hides credentials),
# set this to 1. (Note: the object name appears in the URL but it expires quickly.)
S3_PRESIGN_DOWNLOADS=0
S3_PRESIGN_EXPIRY_SECONDS=300

# JWT Authentication
JWT_SECRET=dev-secret-change-me-in-production
ACCESS_TTL_MIN=15           # Access token expires in 15 minutes
REFRESH_TTL_MIN=10080       # Refresh token expires in 7 days (10080 minutes)

# Overlay codes (typed by user during submission)
OVERLAY_SECRET=dev-overlay-secret-change-me

# Stripe (TEST) â€“ replace with your test keys
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Token pricing
TOKEN_PRICE_USD_CENTS=1     # 1 token = 1 cent (deposit credits = amount in cents)

# Withdrawal configuration
WITHDRAW_MODE=refund        # refund|disabled (Connect later)
MAX_DEPOSIT_TOKENS_DAY=100000  # e.g. $1,000 if 1 token = 1 cent
REFUND_WINDOW_DAYS=90       # typical 90d
